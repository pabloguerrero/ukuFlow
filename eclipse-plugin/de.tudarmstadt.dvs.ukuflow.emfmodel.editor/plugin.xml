<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>

<!--
-->

<plugin>

   <extension point="org.eclipse.ui.newWizards">
      <category
            id="org.eclipse.emf.ecore.Wizard.category.ID"
            name="%_UI_Wizard_category"/>
      <wizard
            id="eventbase.presentation.EventbaseModelWizardID"
            name="%_UI_EventbaseModelWizard_label"
            class="eventbase.presentation.EventbaseModelWizard"
            category="org.eclipse.emf.ecore.Wizard.category.ID"
            icon="icons/full/obj16/EventbaseModelFile.gif">
         <description>%_UI_EventbaseModelWizard_description</description>
         <selection class="org.eclipse.core.resources.IResource"/>
      </wizard>
   </extension>

   <extension point="org.eclipse.ui.editors">
      <editor
            id="eventbase.presentation.EventbaseEditorID"
            name="%_UI_EventbaseEditor_label"
            icon="icons/full/obj16/EventbaseModelFile.gif"
            extensions="eventbase"
            class="eventbase.presentation.EventbaseEditor"
            contributorClass="eventbase.presentation.EventbaseActionBarContributor">
      </editor>
   </extension>

</plugin>
